@model Project_Databas.Models.ProfilDetaljer

<h3>Ladda upp en profilbild</h3>

<p>Profilbild kopplat till: @Html.DisplayFor(model => model.Pr_Mail)</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Uppladdning" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Pr_Namn" class="control-label"></label>
                <input asp-for="Pr_Namn" class="form-control" readonly="readonly" />
                <span asp-validation-for="Pr_Namn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pr_Mail" class="control-label"></label>
                <input asp-for="Pr_Mail" class="form-control" readonly="readonly" />
                <span asp-validation-for="Pr_Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pr_Bor" class="control-label"></label>
                <input asp-for="Pr_Bor" class="form-control" readonly="readonly" />
                <span asp-validation-for="Pr_Bor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pr_Losenord" class="control-label"></label>
                <input asp-for="Pr_Losenord" class="form-control" readonly="readonly" />
                <span asp-validation-for="Pr_Losenord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pr_Id" class="control-label"></label>
                <input asp-for="Pr_Id" class="form-control" readonly="readonly" />
                <span asp-validation-for="Pr_Id" class="text-danger"></span>
            </div>
            </br>

            <div class="form-group">
                <label asp-for="Pr_Bild" class="control-label"></label>
                <input type="file" id="formFile" name="Pr_Bild" class="form-control" />
                <span asp-validation-for="Pr_Bild" class="text-danger"></span>
            </div>
            <br />
            <div class="mb-3">
                <input type="submit" value="Ladda upp" class="btn btn-dark" />
            </div>

        </form>
    </div>
</div>

